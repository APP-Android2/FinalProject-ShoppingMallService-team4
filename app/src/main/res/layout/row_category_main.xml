<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="rowCategoryMainViewModel"
            type="kr.co.lion.team4.mrco.viewmodel.category.RowCategoryMainViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_main_product_thumbnail"
                android:layout_width="184dp"
                android:layout_height="184dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/iu_image2" />

            <TextView
                android:id="@+id/item_main_product_mbti"
                android:layout_width="56dp"
                android:layout_height="32dp"
                android:background="#BDB14C"
                android:gravity="center"
                android:text="@{rowCategoryMainViewModel.textViewRowCategoryMainProductMBTI}"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/item_main_product_thumbnail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/item_main_product_thumbnail" />

            <TextView
                android:id="@+id/item_main_like_coordinator_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:text="@{rowCategoryMainViewModel.textViewRowCategoryMainCoordinatorName}"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/item_main_product_thumbnail"
                app:layout_constraintTop_toBottomOf="@+id/item_main_product_thumbnail" />

            <TextView
                android:id="@+id/item_main_like_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:text="@{rowCategoryMainViewModel.textViewRowCategoryMainProductName}"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/black"
                android:textSize="13dp"
                app:layout_constraintStart_toStartOf="@+id/item_main_product_thumbnail"
                app:layout_constraintTop_toBottomOf="@+id/item_main_like_coordinator_name" />

            <TextView
                android:id="@+id/item_main_like_product_discount_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{rowCategoryMainViewModel.textViewRowCategoryMainProductDiscountPrice}"
                android:textColor="#FC5306"
                android:textSize="13dp"
                android:textStyle="bold"
                app:layout_constraintBaseline_toBaselineOf="@id/item_main_like_product_price"
                app:layout_constraintStart_toStartOf="@id/item_main_like_product_name" />

            <TextView
                android:id="@+id/item_main_like_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                android:text="@{rowCategoryMainViewModel.textViewRowCategoryMainProductPrice}"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/item_main_like_product_discount_percent"
                app:layout_constraintTop_toBottomOf="@id/item_main_like_product_name" />


            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkBoxRowLikeProductLike"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="4dp"
                android:button="@drawable/selector_favorite"
                app:buttonTint="#B31010"
                app:layout_constraintEnd_toEndOf="@+id/item_main_product_thumbnail"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_main_product_thumbnail" />

            <Button
                android:id="@+id/buttonRowCategoryMainCart"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="174dp"
                android:layout_height="45dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="장바구니 담기"
                android:textColor="@color/black"
                app:cornerRadius="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_main_like_product_price"
                app:strokeColor="#BFBFBF" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</layout>