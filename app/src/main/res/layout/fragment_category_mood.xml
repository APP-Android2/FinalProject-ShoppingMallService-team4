                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="4dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/ic_launcher_foreground" />

                            <ImageView
                                android:id="@+id/imageView11"
                                android:layout_width="match_parent"
