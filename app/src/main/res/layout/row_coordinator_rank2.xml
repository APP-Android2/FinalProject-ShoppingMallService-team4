            tools:text="1,324" />

        <TextView
            android:id="@+id/textViewRowCoordinatorRank2Heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
