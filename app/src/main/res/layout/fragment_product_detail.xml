<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="fragmentProductDetailViewModel"
            type="kr.co.lion.team4.mrco.viewmodel.product.FragmentProductDetailViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/product_detail_coordi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{fragmentProductDetailViewModel.product_detail_coordi_name}"
            tools:text="호불호 없는 출근룩 코디 SET"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/product_detail_image_recycler"
            android:layout_width="0dp"
            android:layout_height="400dp"
            app:layout_constraintTop_toBottomOf="@id/product_detail_coordi_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal"
            android:clipToPadding="false"
            android:clipChildren="false"
            app:layoutManager="com.google.android.material.carousel.CarouselLayoutManager" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/product_detail_item_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:dividerThickness="8dp"
            app:layout_constraintTop_toBottomOf="@id/product_detail_image_recycler"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginVertical="16dp" />

        <TextView
            android:id="@+id/product_detail_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/product_detail_item_category"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="16dp"
            android:text="@{fragmentProductDetailViewModel.product_detail_item_name}"
            tools:text="스탠다드 셔츠"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/product_detail_item_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{fragmentProductDetailViewModel.product_detail_item_category}"
            tools:text="상의"
            app:layout_constraintTop_toBottomOf="@id/product_detail_item_divider"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:textAppearance="@style/TextAppearance.Material3.LabelMedium"/>

        <TextView
            android:id="@+id/product_detail_item_size_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="128dp"
            app:layout_constraintTop_toBottomOf="@id/product_detail_item_name"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:text="사이즈"
            android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/product_detail_item_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@id/product_detail_item_size_label"
            app:layout_constraintStart_toEndOf="@id/product_detail_item_size_label"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="start"
            android:text="@{fragmentProductDetailViewModel.product_detail_item_size}"
            tools:text="M"
            android:textAppearance="@style/TextAppearance.Material3.LabelLarge" />

        <TextView
            android:id="@+id/product_detail_item_color_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="128dp"
            app:layout_constraintTop_toBottomOf="@id/product_detail_item_size_label"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="색상"
            android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/product_detail_item_color"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@id/product_detail_item_color_label"
            app:layout_constraintStart_toEndOf="@id/product_detail_item_color_label"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@{fragmentProductDetailViewModel.product_detail_item_color}"
            tools:text="WHITE"
            android:textAppearance="@style/TextAppearance.Material3.LabelLarge" />

        <TextView
            android:id="@+id/product_detail_item_number_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="128dp"
            app:layout_constraintTop_toBottomOf="@id/product_detail_item_color_label"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="상품 S/N"
            android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/product_detail_item_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@id/product_detail_item_number_label"
            app:layout_constraintStart_toEndOf="@id/product_detail_item_number_label"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@{fragmentProductDetailViewModel.product_detail_item_number}"
            tools:text="1234abcd"
            android:textAppearance="@style/TextAppearance.Material3.LabelLarge" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/product_detail_item_divider_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:dividerThickness="8dp"
            app:layout_constraintTop_toBottomOf="@id/product_detail_item_number_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="64dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>