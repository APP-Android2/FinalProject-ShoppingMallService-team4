<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="userMyPageViewModel"
            type="kr.co.lion.team4.mrco.viewmodel.mypage.UserMyPageViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".fragment.mypage.UserMyPageFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageViewUserMyPage"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@android:drawable/gallery_thumb" />

            <Button
                android:id="@+id/iconButtonImageUserMyPage"
                style="?attr/materialIconButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="100dp"
                app:icon="@android:drawable/ic_menu_edit"
                app:iconTint="@color/black"
                app:layout_constraintStart_toStartOf="@+id/imageViewUserMyPage"
                app:layout_constraintTop_toTopOf="@+id/imageViewUserMyPage" />

            <TextView
                android:id="@+id/textViewNicknameUserMyPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@{userMyPageViewModel.textViewNicknameUserMyPage}"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageViewUserMyPage"
                app:layout_constraintTop_toTopOf="@+id/imageViewUserMyPage"
                tools:text="닉네임" />

            <TextView
                android:id="@+id/textViewGenderUserMyPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="@{userMyPageViewModel.textViewGenderUserMyPage}"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintStart_toEndOf="@+id/imageViewUserMyPage"
                app:layout_constraintTop_toBottomOf="@+id/textViewNicknameUserMyPage"
                tools:text="성별" />

            <TextView
                android:id="@+id/textViewMbtiUserMyPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="@{userMyPageViewModel.textViewMbtiUserMyPage}"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintStart_toEndOf="@+id/imageViewUserMyPage"
                app:layout_constraintTop_toBottomOf="@+id/textViewGenderUserMyPage"
                tools:text="MBTI" />

            <Button
                android:id="@+id/iconButtonEditUserMyPage"
                style="?attr/materialIconButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:icon="@android:drawable/ic_menu_edit"
                app:iconTint="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/divider10"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewMenuUserMyPage1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:drawableStart="@android:drawable/ic_media_play"
                android:text="    주문/배송 조회"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <View
                android:id="@+id/divider11"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/textViewMenuUserMyPage2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:drawableStart="@android:drawable/ic_media_play"
                android:text="    나의 리뷰"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <View
                android:id="@+id/divider12"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/textViewMenuUserMyPage3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:drawableStart="@android:drawable/ic_media_play"
                android:text="    고객센터"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <View
                android:id="@+id/divider13"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/textViewMenuUserMyPage4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:drawableStart="@android:drawable/ic_media_play"
                android:text="    코디네이터 등록 신청"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <View
                android:id="@+id/divider14"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/textViewMenuUserMyPage5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:drawableStart="@android:drawable/ic_media_play"
                android:text="    로그아웃"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        </LinearLayout>

    </LinearLayout>

</layout>