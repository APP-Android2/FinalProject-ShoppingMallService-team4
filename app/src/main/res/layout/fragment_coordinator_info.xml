<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:transitionGroup="true"
        tools:context=".CoordinatorInfoFragment">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            app:tabTextColor="#878787"
            app:tabSelectedTextColor="#FFFFFF"
            app:tabIndicatorColor="#DDF5FF"
            app:tabIndicatorFullWidth="true"
            app:tabRippleColor="#555555"
            android:elevation="1dp">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/main_home_tab_mbti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인기 코디네이터" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/main_home_tab_stylist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="코디네이터 소개" />

        </com.google.android.material.tabs.TabLayout>


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="COORDINATOR"
                    android:textAlignment="center"
                    android:textColor="#00364E"
                    android:textSize="24dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewCoordinatorInfo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:nestedScrollingEnabled="false" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</layout>