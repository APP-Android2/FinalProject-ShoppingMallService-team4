<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="rowHomeRecommendNewCoordiViewModel"
            type="kr.co.lion.team4.mrco.viewmodel.home.recommend.RowHomeRecommendNewCoordiViewModel" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/item_main_product_thumbnail3"
                android:layout_width="184dp"
                android:layout_height="184dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/iu_image4" />

            <TextView
                android:id="@+id/item_main_product_mbti3"
                android:layout_width="56dp"
                android:layout_height="32dp"
                android:background="#B147AD"
                android:gravity="center"
                android:text="MBTI"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/item_main_product_thumbnail3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/item_main_product_thumbnail3" />

            <TextView
                android:id="@+id/item_main_coordinator_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:text="코디네이터 이름"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/item_main_product_thumbnail3"
                app:layout_constraintTop_toBottomOf="@+id/item_main_product_thumbnail3" />

            <TextView
                android:id="@+id/item_main_product_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:text="상품명"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/black"
                android:textSize="13dp"
                app:layout_constraintStart_toStartOf="@+id/item_main_product_thumbnail3"
                app:layout_constraintTop_toBottomOf="@+id/item_main_coordinator_name3" />

            <TextView
                android:id="@+id/item_main_product_discount_percent3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{rowHomeRecommendNewCoordiViewModel.textViewRowHomeRecommendNewCoordiProductDiscountPercent}"
                android:textColor="#FC5306"
                android:textSize="13dp"
                android:textStyle="bold"
                app:layout_constraintBaseline_toBaselineOf="@id/item_main_product_price3"
                app:layout_constraintStart_toStartOf="@id/item_main_product_name3" />

            <TextView
                android:id="@+id/item_main_product_price3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                android:text="가격"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/item_main_product_discount_percent3"
                app:layout_constraintTop_toBottomOf="@id/item_main_product_name3" />


            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/item_main_product_pick_button3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="4dp"
                android:button="@drawable/selector_favorite"
                app:buttonTint="#B31010"
                app:layout_constraintEnd_toEndOf="@+id/item_main_product_thumbnail3"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_main_product_thumbnail3" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</layout>