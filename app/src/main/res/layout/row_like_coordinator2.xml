<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="rowLikeCoordinator2ViewModel"
            type="kr.co.lion.team4.mrco.viewmodel.like.RowLikeCoordinator2ViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageViewCoordinatorInfo"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginRight="22dp"
            android:layout_marginBottom="25dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:shapeAppearanceOverlay="@style/roundedImageView"
            app:srcCompat="@drawable/iu_image2">

        </com.google.android.material.imageview.ShapeableImageView>


        <TextView
            android:id="@+id/textViewRowCoordinatorRank2Follower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:text="@{rowLikeCoordinator2ViewModel.textViewRowLikeCoordinator2HeartCount}"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewCoordinatorInfo"
            app:layout_constraintEnd_toEndOf="@+id/imageViewCoordinatorInfo"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toEndOf="@+id/textViewRowCoordinatorRank2Heart" />

        <TextView
            android:id="@+id/textViewRowCoordinatorRank2Heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="7dp"
            android:text="â™¥"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewCoordinatorInfo"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>