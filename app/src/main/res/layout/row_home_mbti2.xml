<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="rowHomeMbti2ViewModel"
            type="kr.co.lion.team4.mrco.viewmodel.home.mbti.RowHomeMbti2ViewModel" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/item_main_mbti_product_thumbnail2"
                android:layout_width="184dp"
                android:layout_height="184dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/iu_image4" />

            <TextView
                android:id="@+id/item_main_mbti_product_mbti2"
                android:layout_width="64dp"
                android:layout_height="32dp"
                android:background="#CA4646"
                android:gravity="center"
                android:text="@{rowHomeMbti2ViewModel.textViewRowHomeMbtiProductMbti}"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/item_main_mbti_product_thumbnail2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/item_main_mbti_product_thumbnail2" />

            <TextView
                android:id="@+id/item_main_mbti_coordinator_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:text="@{rowHomeMbti2ViewModel.textViewRowHomeMbtiCoordinatorName}"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/item_main_mbti_product_thumbnail2"
                app:layout_constraintTop_toBottomOf="@+id/item_main_mbti_product_thumbnail2" />

            <TextView
                android:id="@+id/item_main_mbti_product_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:text="@{rowHomeMbti2ViewModel.textViewRowHomeMbtiProductName}"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/black"
                android:textSize="13dp"
                app:layout_constraintStart_toStartOf="@+id/item_main_mbti_product_thumbnail2"
                app:layout_constraintTop_toBottomOf="@+id/item_main_mbti_coordinator_name2" />

            <TextView
                android:id="@+id/item_main_product_mbti_discount_percent2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{rowHomeMbti2ViewModel.textViewRowHomeMbtiProductDiscountPercent}"
                android:textColor="#FC5306"
                android:textSize="13dp"
                android:textStyle="bold"
                app:layout_constraintBaseline_toBaselineOf="@id/item_main_mbti_product_price2"
                app:layout_constraintStart_toStartOf="@id/item_main_mbti_product_name2" />

            <TextView
                android:id="@+id/item_main_mbti_product_price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                android:text="@{rowHomeMbti2ViewModel.textViewRowHomeMbtiProductPrice}"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/item_main_product_mbti_discount_percent2"
                app:layout_constraintTop_toBottomOf="@id/item_main_mbti_product_name2" />


            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/item_main_mbti_product_pick_button2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="4dp"
                android:button="@drawable/selector_favorite"
                app:buttonTint="#B31010"
                app:layout_constraintEnd_toEndOf="@+id/item_main_mbti_product_thumbnail2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_main_mbti_product_thumbnail2" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</layout>