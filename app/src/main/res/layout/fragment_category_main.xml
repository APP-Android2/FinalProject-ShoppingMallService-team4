<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerLayoutContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:transitionGroup="true">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbarCoordinatorMain"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:background="@color/white"
                android:backgroundTint="#FFFFFF"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:menu="@menu/menu_main_category_toolbar"
                app:navigationIcon="@drawable/menu_24px"
                app:subtitle="아메카지"
                app:subtitleCentered="true"
                app:subtitleTextColor="#666"
                app:title="MOOD"
                app:titleCentered="true"
                app:titleTextColor="#000000" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:scrollbars="none">

                        <com.google.android.material.chip.ChipGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:chipSpacingHorizontal="8dp">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipCoordinatorMainMale"
                                style="@style/Widget.MaterialComponents.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="남"
                                app:chipBackgroundColor="@color/mtrl_chip_background_color" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipCoordinatorMainFemale"
                                style="@style/Widget.MaterialComponents.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="여" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipCoordinatorMain1"
                                style="@style/Widget.MaterialComponents.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="미니멀" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipCoordinatorMain2"
                                style="@style/Widget.MaterialComponents.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="이지캐주얼" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipCoordinatorMain3"
                                style="@style/Widget.MaterialComponents.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="비지니스" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipCoordinatorMain4"
                                style="@style/Widget.MaterialComponents.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="비지니스2" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipCoordinatorMain5"
                                style="@style/Widget.MaterialComponents.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="비지니스3" />

                        </com.google.android.material.chip.ChipGroup>
                    </HorizontalScrollView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:descendantFocusability="blocksDescendants">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewCategoryMain"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingTop="10dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigationViewContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@color/white"
            app:drawerLayoutCornerSize="0dp"
            app:menu="@menu/menu_category_drawer" />
    </androidx.drawerlayout.widget.DrawerLayout>

</layout>