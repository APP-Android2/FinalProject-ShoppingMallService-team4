<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_main_like_product_thumbnail"
            android:layout_width="184dp"
            android:layout_height="184dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/item_main_like_product_mbti"
            android:layout_width="64dp"
            android:layout_height="32dp"
            app:layout_constraintBottom_toBottomOf="@id/item_main_like_product_thumbnail"
            app:layout_constraintStart_toStartOf="@id/item_main_like_product_thumbnail" />

        <TextView
            android:id="@+id/item_main_like_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            app:layout_constraintStart_toStartOf="@id/item_main_like_product_thumbnail"
            app:layout_constraintTop_toBottomOf="@id/item_main_like_product_thumbnail"
            app:layout_constraintBaseline_toBaselineOf="@id/item_main_like_product_like"
            tools:text="홍길동 코디이름"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/item_main_like_product_discount_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@id/item_main_like_product_price"
            app:layout_constraintStart_toStartOf="@id/item_main_like_product_name"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            tools:text="30%"
            android:textColor="#FC5306" />

        <TextView
            android:id="@+id/item_main_like_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toEndOf="@id/item_main_like_product_discount_percent"
            app:layout_constraintTop_toBottomOf="@id/item_main_like_product_name"
            tools:text="178,000"
            android:textColor="@color/black" />


        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/item_main_like_product_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/item_main_like_product_thumbnail"
            app:layout_constraintRight_toRightOf="parent"
            android:button="@drawable/selector_favorite"
            app:buttonTint="@android:color/darker_gray" />

        <Button
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/item_main_like_product_price"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="8dp"
            android:text="장바구니 담기"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>