                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/imageButton10003"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="16dp"
