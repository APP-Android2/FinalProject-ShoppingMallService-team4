<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.Material3.CardView.Outlined"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardBackgroundColor="#FFFFFF">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/item_mbti_product_thumbnail"
                    android:layout_width="200dp"
                    android:layout_height="272dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/iu_image2" />

                <TextView
                    android:id="@+id/item_mbti_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="ABCDEDFG 코디"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/item_mbti_product_thumbnail" />

                <Button
                    android:id="@+id/item_mbti_product_like_button"
                    style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:checked="true"
                    app:icon="@drawable/selector_favorite"
                    app:iconTint="#FF0000"
                    app:layout_constraintBottom_toBottomOf="@id/item_mbti_product_thumbnail"
                    app:layout_constraintEnd_toEndOf="@id/item_mbti_product_thumbnail" />


                <TextView
                    android:id="@+id/item_mbti_product_owner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="스타일리스트 이름"
                    app:layout_constraintStart_toStartOf="@id/item_mbti_product_name"
                    app:layout_constraintTop_toBottomOf="@id/item_mbti_product_name" />

                <ImageView
                    android:id="@+id/item_mbti_product_rate_star"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/star_24px"
                    app:layout_constraintBottom_toBottomOf="@id/item_mbti_product_rate"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintStart_toStartOf="@id/item_mbti_product_owner"
                    app:layout_constraintTop_toTopOf="@id/item_mbti_product_rate"
                    app:tint="#FDB61D" />


                <TextView
                    android:id="@+id/item_mbti_product_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="4.3"
                    android:textColor="#FDB61D"
                    app:layout_constraintStart_toEndOf="@id/item_mbti_product_rate_star"
                    app:layout_constraintTop_toBottomOf="@id/item_mbti_product_owner" />

                <TextView
                    android:id="@+id/item_mbti_product_discount_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="50%"
                    android:textColor="#FC5306"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/item_mbti_product_owner"
                    app:layout_constraintTop_toBottomOf="@id/item_mbti_product_rate" />

                <TextView
                    android:id="@+id/item_mbti_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="178,000"
                    app:layout_constraintStart_toEndOf="@id/item_mbti_product_discount_percent"
                    app:layout_constraintTop_toBottomOf="@id/item_mbti_product_rate" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.Material3.CardView.Outlined"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#FFFFFF">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/item_mbti_product_thumbnail2"
                    android:layout_width="200dp"
                    android:layout_height="272dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/iu_image2" />

                <TextView
                    android:id="@+id/item_mbti_product_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="ABCDEDFG 코디"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/item_mbti_product_thumbnail2" />

                <Button
                    android:id="@+id/item_mbti_product_like_button2"
                    style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:checked="true"
                    app:icon="@drawable/selector_favorite"
                    app:iconTint="#FF0000"
                    app:layout_constraintBottom_toBottomOf="@id/item_mbti_product_thumbnail2"
                    app:layout_constraintEnd_toEndOf="@id/item_mbti_product_thumbnail2" />


                <TextView
                    android:id="@+id/item_mbti_product_owner2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="스타일리스트 이름"
                    app:layout_constraintStart_toStartOf="@id/item_mbti_product_name2"
                    app:layout_constraintTop_toBottomOf="@id/item_mbti_product_name2" />

                <ImageView
                    android:id="@+id/item_mbti_product_rate_star2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/star_24px"
                    app:layout_constraintBottom_toBottomOf="@id/item_mbti_product_rate2"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintStart_toStartOf="@id/item_mbti_product_owner2"
                    app:layout_constraintTop_toTopOf="@id/item_mbti_product_rate2"
                    app:tint="#FDB61D" />


                <TextView
                    android:id="@+id/item_mbti_product_rate2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="4.3"
                    android:textColor="#FDB61D"
                    app:layout_constraintStart_toEndOf="@id/item_mbti_product_rate_star2"
                    app:layout_constraintTop_toBottomOf="@id/item_mbti_product_owner2" />

                <TextView
                    android:id="@+id/item_mbti_product_discount_percent2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="50%"
                    android:textColor="#FC5306"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/item_mbti_product_owner2"
                    app:layout_constraintTop_toBottomOf="@id/item_mbti_product_rate2" />

                <TextView
                    android:id="@+id/item_mbti_product_price2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="178,000"
                    app:layout_constraintStart_toEndOf="@id/item_mbti_product_discount_percent2"
                    app:layout_constraintTop_toBottomOf="@id/item_mbti_product_rate2" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</layout>