<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  ImageView Style  -->
    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item> <!-- 모서리 모양 (rounded: 둥근 모서리) -->
        <item name="cornerSize">20%</item> <!-- 둥글기 정도. 너비/높이의 절반으로 설정하면 원 모양이 됩니다. -->
    </style>

    <style name="roundedImageView50">
        <item name="cornerFamily">rounded</item> <!-- 모서리 모양 (rounded: 둥근 모서리) -->
        <item name="cornerSize">50%</item> <!-- 둥글기 정도. 너비/높이의 절반으로 설정하면 원 모양이 됩니다. -->
    </style>

    <style name="PopupMenuStyle">
        <!-- 팝업 메뉴 배경색 -->
        <!-- 위치 res/color/popup_pressed_color.xml 에서 수정 가능함 -->
        <item name="android:itemBackground">@color/popup_pressed_color</item>
    </style>

    <style name="ChipChoice">
    <!--        -->
        <item name="chipBackgroundColor">@color/chip_coordinator_main_background_selector</item>
        <item name="android:textColor">@color/chip_coordination_main_text_selector</item>
        <item name="checkedIcon">@drawable/done_24px</item>
    </style>

    <!-- MRCO 툴바 타이틀 글꼴 변경 -->
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/title</item>
    </style>

    <!-- 기본 문자 글꼴 -->
    <style name="Basic_Font_Theme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Coordinator_Info_Semi_Title_Theme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/coordinator_info_semi_title</item>
    </style>

    <!-- 카테고리 문자 글꼴 -->
    <style name="Categori_Font_Theme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/m_plus1_code_font_medium</item>
    </style>

    <!-- MaterialAlertDialog 배경색, 글자색 설정-->
    <style name="MaterialAlertDialog_Theme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialog_PositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialog_NegativeButton</item>
    </style>

    <!-- MaterialAlertDialog의 Positive TextButton 글자색 설정-->
    <style name="AlertDialog_PositiveButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="rippleColor">@color/material_dynamic_neutral90</item>
    </style>

    <!-- MaterialAlertDialog의 Negative TextButton 글자색 설정-->
    <style name="AlertDialog_NegativeButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/gray</item>
        <item name="rippleColor">@color/material_dynamic_neutral95</item>
    </style>


</resources>